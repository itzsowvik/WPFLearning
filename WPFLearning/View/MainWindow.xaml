<Window x:Class="WPFLearning.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFLearning.View"
        mc:Ignorable="d"
        Title="Home" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="10">

            <Button Content="Open File" Width="80"/>
            <Label Content="Insert Text"/>
            <TextBox Height="50" Width="500" HorizontalAlignment="Left"/>
            <Button Content="Enter Text" Width="60" Margin="0,10,0,0" HorizontalAlignment="Left"/>
            <TextBlock Height="287"/>

        </StackPanel>
    </Grid>
</Window>
